<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <p><%= race.date %></p>
        <p><%= race.description %></p>
        <div class="item-list horse-list">
            <% for(var i=0; i < horses.length; i++) { %>
                <div class="list-item horse-list-item">
                    <img src="images/horses/<%= horses[i].image %>">
                    <a class="horse-name" href="/horses/<%= horses[i].id %>"><%= horses[i].name %></a>
                    <p class="horse-power"><%= horses[i].power %></p>
                    <p class="horse-breed"><%= horses[i].breed %></p>
                </div>
            <% } %>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>
</html>